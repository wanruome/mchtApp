<resources>

<!--    <style name="AppBaseTheme" parent="android:Theme.Light"></style>

    <style name="AppTheme" parent="AppBaseTheme">
        &lt;!&ndash; All customizations that are NOT specific to a particular API-level can go here. &ndash;&gt;
    </style>-->

    <style name="pullToRefreshText">
        <item name="android:textSize">12dip</item>
        <item name="android:textColor">#8899a6</item>
    </style>
    <!-- ListView GridView 样式 -->
    <style name="listStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:listSelector">@color/AllTransparent</item>
        <item name="android:divider">@color/base_listview_divider_color</item>
        <item name="android:dividerHeight">@dimen/base_listview_divider_size</item>
        <item name="android:fadingEdge">none</item>
        <item name="android:cacheColorHint">@color/AllTransparent</item>
        <item name="android:scrollbarSize">@dimen/base_listview_scrollbar_size</item>
        <item name="android:scrollbarThumbVertical">@drawable/common_scrollbar</item>
        <item name="android:scrollbarThumbHorizontal">@drawable/common_scrollbar</item>
    </style>

    <style name="listStyle.NoDivider" parent="listStyle">
        <item name="android:divider">@color/AllTransparent</item>
    </style>

    <style name="listStyle.WrapNoDivider" parent="listStyle">
        <item name="android:divider">@color/AllTransparent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="scrollStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:fadingEdge">none</item>
        <item name="android:scrollbarSize">@dimen/base_listview_scrollbar_size</item>
        <item name="android:scrollbarThumbVertical">@drawable/common_scrollbar</item>
        <item name="android:scrollbarThumbHorizontal">@drawable/common_scrollbar</item>
    </style>
    <!-- dialog 样式 -->
    <style name="dialogStyle_floating" parent="android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@color/base_dialog_bgcolor</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="dialogStyle_floating_bgdark" parent="android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@color/AllTransparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimAmount">0.3</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="dialogStyle_fullscreen" parent="android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@color/AllTransparent</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

</resources>