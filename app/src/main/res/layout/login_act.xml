<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg_mcht"
    android:gravity="center_horizontal">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_weight="6"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/newpay_logo"
            android:id="@+id/img_logo"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            >
            <TextView
                style="@style/textWhiteLable.Small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="欢迎来到 "
                />
            <TextView
                style="@style/textWhite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="新生支付"
                />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_weight="6"
        android:paddingLeft="@dimen/dpx080"
        android:paddingRight="@dimen/dpx080"
        >
        <LinearLayout
            android:paddingBottom="@dimen/dpx016"
            android:paddingTop="@dimen/dpx016"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                style="@style/textWhiteSub"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="用户名："
                />
            <EditText
                android:id="@+id/edt_name"
                style="@style/editTextStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLength="11"
                android:digits="@string/digits_number"/>
        </LinearLayout>
        <LinearLayout
            android:paddingBottom="@dimen/dpx016"
            android:paddingTop="@dimen/dpx016"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                style="@style/textWhiteSub"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="密　码："
                />
            <EditText
                android:id="@+id/edt_pwd"
                style="@style/editTextStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLength="16"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ly_verifyCode"
            android:paddingBottom="@dimen/dpx016"
            android:paddingTop="@dimen/dpx016"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                style="@style/textWhiteSub"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="验证码："
                />
            <EditText

                android:id="@+id/edt_verifyCode"
                style="@style/editTextStyle"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dpx012"
                android:maxLength="10"
                />
            <Button
                android:id="@+id/btn_verifyCode"
                style="@style/pwdBtnVerify"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="获取验证码"
                android:layout_marginLeft="@dimen/dpx012"
                />

        </LinearLayout>
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical|right"
            >
            <TextView
                android:paddingBottom="@dimen/dpx016"
                android:paddingTop="@dimen/dpx016"
                android:id="@+id/text_findpwd"
                style="@style/textWhiteLable.Small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="忘记密码？"/>
        </LinearLayout>
        <Button
            android:id="@+id/btn_submit"
            style="@style/btnStyleNoMargin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="登录"
            />
        <LinearLayout
            android:id="@+id/ly_fast_register"
            android:layout_marginTop="@dimen/dpx080"
            android:paddingBottom="@dimen/dpx006"
            android:paddingTop="@dimen/dpx006"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical|right"
            >
            <TextView
                style="@style/textWhiteSub"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="快速注册"
                />
            <ImageView
                android:paddingLeft="@dimen/dpx012"
                android:src="@mipmap/icon_register_navigation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
