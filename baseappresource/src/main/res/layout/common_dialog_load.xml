<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/AllTransparent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/dialogloading_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/popup_single"
        android:gravity="center"
        android:orientation="vertical" >

        <ProgressBar
            style="@android:style/Widget.ProgressBar.Large"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dpx012"
            android:indeterminate="true"
            android:indeterminateDrawable="@drawable/common_anim_dialogload_big" />

        <TextView
            android:id="@+id/dialogloading_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dpx012"
            android:text="@string/loading_waiting_text"
            android:textColor="@color/common_dialogloading_textcolor"
            android:textSize="@dimen/textNormal" />
    </LinearLayout>

</LinearLayout>