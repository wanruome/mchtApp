<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/popdialog_title"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
             <TextView
            android:id="@+id/wheel_start_lable"
            style="@style/textSub"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
                 android:text="开始日期"
            />
            <TextView
                style="@style/text"
                android:id="@+id/wheel_text_select"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="隐藏结束时间(同一天)"
                android:layout_alignParentRight="true"
                />
        </RelativeLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/dpx240"
            android:orientation="horizontal"
            android:paddingLeft="0dip"
            android:paddingRight="0dip" >
            <com.ruomm.base.view.wheel.WheelView
                android:id="@+id/wheel_start_year"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="3"
                app:wheel_algin_type="center"
                app:wheel_flingspeed="0.8"
                app:wheel_isCyclic="true"
                app:wheel_skiplinecolor="@color/wheel_lineskip"
                app:wheel_text_lineSpacing="1.5"
                app:wheel_textcolor_current="@color/wheel_color_current"
                app:wheel_textcolor_drak="@color/wheel_color_drak"
                app:wheel_textcolor_little="@color/wheel_color_little"
                app:wheel_textsize="@dimen/textNormal"
                app:wheel_zoom_textsize="0.2"
                app:wheel_zoom_width="0.1" />

            <com.ruomm.base.view.wheel.WheelView
                android:id="@+id/wheel_start_month"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="2"
                app:wheel_algin_type="center"
                app:wheel_flingspeed="0.4"
                app:wheel_isCyclic="true"
                app:wheel_skiplinecolor="@color/wheel_lineskip"
                app:wheel_text_lineSpacing="1.5"
                app:wheel_textcolor_current="@color/wheel_color_current"
                app:wheel_textcolor_drak="@color/wheel_color_drak"
                app:wheel_textcolor_little="@color/wheel_color_little"
                app:wheel_textsize="@dimen/textNormal"
                app:wheel_zoom_textsize="0.2"
                app:wheel_zoom_width="0.1" />
            <com.ruomm.base.view.wheel.WheelView
                android:id="@+id/wheel_start_day"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="2"
                app:wheel_algin_type="center"
                app:wheel_flingspeed="0.4"
                app:wheel_isCyclic="true"
                app:wheel_skiplinecolor="@color/wheel_lineskip"
                app:wheel_text_lineSpacing="1.5"
                app:wheel_textcolor_current="@color/wheel_color_current"
                app:wheel_textcolor_drak="@color/wheel_color_drak"
                app:wheel_textcolor_little="@color/wheel_color_little"
                app:wheel_textsize="@dimen/textNormal"
                app:wheel_zoom_textsize="0.2"
                app:wheel_zoom_width="0.1" />
        </LinearLayout>
        <TextView
            android:id="@+id/wheel_end_lable"
            style="@style/textSub"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="结束日期"
            />
        <LinearLayout
            android:id="@+id/wheel_end_container"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/dpx240"
            android:background="@drawable/popdialog_title"
            android:orientation="horizontal"
            android:paddingLeft="0dip"
            android:paddingRight="0dip" >

            <com.ruomm.base.view.wheel.WheelView
                android:id="@+id/wheel_end_year"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="3"
                app:wheel_algin_type="center"
                app:wheel_flingspeed="0.8"
                app:wheel_isCyclic="true"
                app:wheel_skiplinecolor="@color/wheel_lineskip"
                app:wheel_text_lineSpacing="1.5"
                app:wheel_textcolor_current="@color/wheel_color_current"
                app:wheel_textcolor_drak="@color/wheel_color_drak"
                app:wheel_textcolor_little="@color/wheel_color_little"
                app:wheel_textsize="@dimen/textNormal"
                app:wheel_zoom_textsize="0.2"
                app:wheel_zoom_width="0.1" />

            <com.ruomm.base.view.wheel.WheelView
                android:id="@+id/wheel_end_month"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="2"
                app:wheel_algin_type="center"
                app:wheel_flingspeed="0.4"
                app:wheel_isCyclic="true"
                app:wheel_skiplinecolor="@color/wheel_lineskip"
                app:wheel_text_lineSpacing="1.5"
                app:wheel_textcolor_current="@color/wheel_color_current"
                app:wheel_textcolor_drak="@color/wheel_color_drak"
                app:wheel_textcolor_little="@color/wheel_color_little"
                app:wheel_textsize="@dimen/textNormal"
                app:wheel_zoom_textsize="0.2"
                app:wheel_zoom_width="0.1" />

            <com.ruomm.base.view.wheel.WheelView
                android:id="@+id/wheel_end_day"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="2"
                app:wheel_algin_type="center"
                app:wheel_flingspeed="0.4"
                app:wheel_isCyclic="true"
                app:wheel_skiplinecolor="@color/wheel_lineskip"
                app:wheel_text_lineSpacing="1.5"
                app:wheel_textcolor_current="@color/wheel_color_current"
                app:wheel_textcolor_drak="@color/wheel_color_drak"
                app:wheel_textcolor_little="@color/wheel_color_little"
                app:wheel_textsize="@dimen/textNormal"
                app:wheel_zoom_textsize="0.2"
                app:wheel_zoom_width="0.1" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/wheelbtn_over"
            style="@style/textSub"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/popdialog_btn_left"
            android:gravity="center"
            android:text="确定" />

        <TextView
            android:id="@+id/wheelbtn_clear"
            style="@style/textSub"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/popdialog_btn_center"
            android:gravity="center"
            android:text="清除" />

        <TextView
            android:id="@+id/wheelbtn_cancle"
            style="@style/textSub"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/popdialog_btn_right"
            android:gravity="center"
            android:text="取消" />
    </LinearLayout>

</LinearLayout>